 <core:FragmentDefinition
 xmlns="sap.m"
 xmlns:l="sap.ui.layout"
 xmlns:core="sap.ui.core"
 xmlns:mvc="sap.ui.core.mvc">
 <Dialog
    id="employeeDialog"
   title="Add/Change Employee Responsible and Comment">
 <l:VerticalLayout class="sapUiContentPadding" width="100%">
 	<Label text="{@i18n&gt;@EmployeeNumber}" labelFor="EmployeeName" />
 	<Input
 		id="employeeInput"
 		placeholder="employee Name"
 		showSuggestion="true"
		suggestionItems="{/I_Employmentshlp}"
		showValueHelp="true"
 		valueHelpRequest="onValueHelpRequest"
		 suggest="onSuggest">
		<suggestionItems>
			<core:ListItem text="{EmployeeFullName}" additionalText="{EmploymentInternalID}" key="{EmploymentInternalID}"/>
		</suggestionItems>
 	</Input>
 	<Label text="{@i18n&gt;@Comments}" labelFor="CommentInput" />
 	<Input
 		id="commentInput"
 		placeholder="Comments">
 	</Input>
 </l:VerticalLayout>
 <Button type="Accept"
        text="{@i18n&gt;@SaveEmp}"
        press="onPressSave"
        ariaDescribedBy="acceptButtonDescription genericButtonDescription">
    <layoutData>
        <FlexItemData growFactor="1" />
    </layoutData>
</Button>
<Button type="Reject"
        text="{@i18n&gt;@Cancel}"
        press="onCloseDialog"
        ariaDescribedBy="rejectButtonDescription genericButtonDescription">
    <layoutData>
        <FlexItemData growFactor="1" />
    </layoutData>
</Button>
</Dialog>
</core:FragmentDefinition> 